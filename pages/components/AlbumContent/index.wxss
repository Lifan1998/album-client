/* pages/components/AlbumContent/index.wxss */

.album-content {
  column-count: 2;
  column-gap: 18rpx;
  padding-bottom: 40px;
}

.album-content>view {
  font-size: 0;
  border-radius: 8px;
  position: relative;
  break-inside: avoid;
  padding-bottom: 18rpx;

}

.album-content image {
  width: 326rpx;

}

.album-desc {
  width: 100%;
  height: 66rpx;
  line-height: 66rpx;
  font-size: 24rpx;
  color: white;
  text-align: center;
  background: #404974;
  border-radius: 0px 0px 8px 8px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* margin-bottom: 18rpx; */
}

.album-count {
  position: absolute;
  left: 0;
  top: 0;
  height: 36rpx;
  padding: 0 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(51, 51, 51, .5);
  border-radius: 8rpx 0px 8rpx 0px;
  color: white;
  font-size: 20rpx;
}