/* pages/views/choosePhoto/index.wxss */

.choose-photo {
  position: absolute;
  width: 100%;
  background: #313859;
  bottom: 0;
  padding: 46rpx 40rpx;
  box-sizing: border-box;
}

.choose-photo .item {
  width: 100%;
  height: 148rpx;
  background: #404974;
  border-radius: 74rpx;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx;

}

.choose-photo image {
  width: 84rpx;
  height: 84rpx;
  background: rgba(91, 104, 166, 1);
  border-radius: 50%;
  margin-right: 24rpx;

}

.desc {
  font-size: 30rpx;
  color: white;
  margin-bottom: 8rpx;

}

.info,
.info>view {
  display: flex;
  align-items: center;
}

.num {
  font-size: 24rpx;
  color: white;
}

.num_sub {
  font-size: 20rpx;
  color: white;
  margin-right: 40rpx;

}

.choose-btn {
  position: fixed;
  bottom: 40rpx;
  width: calc(100vw - 80rpx);
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: space-between;
}

.choose-btn view {
  width: 300rpx;
  height: 96rpx;
  background: rgba(77, 88, 140, 1);
  border-radius: 57rpx;
  font-size: 40rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.choose-btn>view:last-child{
  background: #5BCB93;
}

.active-item {
  background: #5BCB93!important;
}